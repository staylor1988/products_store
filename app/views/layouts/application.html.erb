<!DOCTYPE html>
<html>
  <head>
    <title>Products Store</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body> 
<div class="container">
 <div class="row">
  <ul class="nav nav-tabs">
    
    <li><%= link_to "All Products", root_path %></li>

    <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories <span class="caret"></span></a>
    <ul class="dropdown-menu">
    <% @categories.all.each do |category| %>  
    <li><%= link_to category.name, categorical_path(category_id: category.id) %>
    </li>
    <% end %> 
    </ul>
    </li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Brand <span class="caret"></span></a>
    <ul class="dropdown-menu">
    <% @brands.each do |brand| %>  
    <li><%= link_to brand, branding_path(brand: brand) %></li>
    <% end %>
   </ul>
 
 <li>
    <%= link_to "View Cart", view_order_path %>
    </li>
    <div class="pull-right">
    <% if user_signed_in? %>
    <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %></li> 
    <li> 
    <%= link_to "Edit Profile", edit_user_registration_path %></li>
    <% else %>
    <li><%= link_to "Sign Up", new_user_registration_path %></li> 
    <li><%= link_to "Sign In", new_user_session_path %></li> 
    <% end %>
    </div>
    </ul>
    <%= yield %>
 </div>
</div>
  </body>
</html>
